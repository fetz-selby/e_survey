<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="com.steve.housing.views.fragment.PersonalDetailsFormFragment">

    <ImageView
        android:id="@+id/profile_image_owner"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/camera" />

    <Spinner
        android:id="@+id/spinnerMaritalStatus"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/othernameTIL"
        app:layout_constraintRight_toRightOf="@+id/othernameTIL"
        app:layout_constraintTop_toBottomOf="@+id/othernameTIL" />

    <Spinner
        android:id="@+id/spinnerDisabilities"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/spinnerMaritalStatus"
        app:layout_constraintRight_toRightOf="@+id/spinnerMaritalStatus"
        app:layout_constraintTop_toBottomOf="@+id/spinnerMaritalStatus" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButtonPdata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:clickable="true"
        app:fabSize="mini"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="@+id/spinnerDisabilities"
        app:layout_constraintRight_toRightOf="@+id/spinnerDisabilities"
        app:layout_constraintTop_toBottomOf="@+id/spinnerDisabilities"
        app:srcCompat="@drawable/check" />


    <android.support.design.widget.TextInputLayout
        android:id="@+id/lastnameTIL"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="@+id/firstnameTIL"
        app:layout_constraintRight_toRightOf="@+id/firstnameTIL"
        app:layout_constraintTop_toBottomOf="@+id/firstnameTIL">

        <EditText
            android:id="@+id/lastnameET"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:hint="@string/last_name_hint"
            android:inputType="textPersonName" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/firstnameTIL"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/profile_image_owner"
        app:layout_constraintRight_toRightOf="@+id/profile_image_owner"
        app:layout_constraintTop_toBottomOf="@+id/profile_image_owner">

        <EditText
            android:id="@+id/firstnameET"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:hint="@string/first_name_hint"
            android:inputType="textPersonName" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/othernameTIL"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="@+id/lastnameTIL"
        app:layout_constraintRight_toRightOf="@+id/lastnameTIL"
        app:layout_constraintTop_toBottomOf="@+id/lastnameTIL">

        <EditText
            android:id="@+id/othernameET"
            android:layout_width="280dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_height="wrap_content"
            android:hint="@string/other_name_hint"
            android:inputType="textPersonName" />

    </android.support.design.widget.TextInputLayout>


</android.support.constraint.ConstraintLayout>