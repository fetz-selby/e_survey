    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayoutPmanagerName"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/editTextPManagerName"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:hint="@string/fullname_hint"
            android:inputType="textPersonName" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayoutPmanagerPhone"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/textInputLayoutPmanagerName"
        app:layout_constraintRight_toRightOf="@+id/textInputLayoutPmanagerName"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayoutPmanagerName">

        <EditText
            android:id="@+id/editTextPropertyManagerPhone"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:hint="@string/phone_hint"
            android:inputType="phone" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayoutPmanagerEmail"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintLeft_toLeftOf="@+id/textInputLayoutPmanagerPhone"
        app:layout_constraintRight_toRightOf="@+id/textInputLayoutPmanagerPhone"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayoutPmanagerPhone">


        <EditText
            android:id="@+id/editTextPManagerEmail"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:hint="@string/email_hint"
            android:inputType="textEmailAddress" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayoutPmanagerCity"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        app:layout_constraintLeft_toLeftOf="@+id/textInputLayoutPmanagerEmail"
        app:layout_constraintRight_toRightOf="@+id/textInputLayoutPmanagerEmail"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayoutPmanagerEmail">

        <EditText
            android:id="@+id/editTextPManagerCity"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:hint="@string/city_hint"
            android:inputType="text" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayoutPmanagerLicenceNumber"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/textInputLayoutPmanagerCity"
        app:layout_constraintRight_toRightOf="@+id/textInputLayoutPmanagerCity"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayoutPmanagerCity">

        <EditText
            android:id="@+id/editTextPManagerLicenceNumber"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:hint="@string/license_number_hint"
            android:inputType="text" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton2"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginBottom="8dp"
        android:clickable="true"
        app:fabSize="mini"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@+id/textInputLayoutPmanagerAddress"
        app:srcCompat="@drawable/check"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayoutPmanagerAddress"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/textInputLayoutPmanagerAddress"
        app:layout_constraintHorizontal_bias="1.0" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayoutPmanagerAddress"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="@+id/textInputLayoutPmanagerLicenceNumber"
        app:layout_constraintRight_toRightOf="@+id/textInputLayoutPmanagerLicenceNumber"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayoutPmanagerLicenceNumber">

        <EditText
            android:id="@+id/editTextPManagerAddress"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:hint="@string/address_hint"
            android:inputType="text" />
    </android.support.design.widget.TextInputLayout>

</android.support.constraint.ConstraintLayout>