<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="com.steve.housing.views.fragment.IdentificationCardFragment"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">


    <ImageView
        android:id="@+id/imageId"
        android:layout_width="300dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/camera"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="31dp" />

    <Spinner
        android:id="@+id/spinnerIdCard"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/imageId"
        app:layout_constraintRight_toRightOf="@+id/imageId"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/imageId" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButtonIdPick"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:clickable="true"
        app:fabSize="mini"
        app:srcCompat="@drawable/check"
        app:layout_constraintRight_toRightOf="@+id/idTIL"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="37dp"
        app:layout_constraintLeft_toLeftOf="@+id/idTIL"
        app:layout_constraintHorizontal_bias="1.0" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/idTIL"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        app:layout_constraintLeft_toLeftOf="@+id/spinnerIdCard"
        app:layout_constraintRight_toRightOf="@+id/spinnerIdCard"
        app:layout_constraintTop_toBottomOf="@+id/spinnerIdCard"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/floatingActionButtonIdPick"
        app:layout_constraintVertical_bias="0.236">

        <EditText
            android:id="@+id/idET"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:hint="@string/id_hint" />
    </android.support.design.widget.TextInputLayout>

</android.support.constraint.ConstraintLayout>