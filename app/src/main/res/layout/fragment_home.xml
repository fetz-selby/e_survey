<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.steve.housing.views.fragment.HomeFragment"
    tools:showIn="@layout/activity_home">


    <Button
        android:id="@+id/buttonOwnerList"
        android:layout_width="163dp"
        android:layout_height="81dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="88dp"
        android:text="@string/owners_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.546"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/buttonPropertyList"
        android:layout_width="163dp"
        android:layout_height="81dp"
        android:text="@string/properties_btn"
        android:layout_marginTop="45dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonOwnerList"
        app:layout_constraintLeft_toLeftOf="@+id/buttonOwnerList"
        app:layout_constraintRight_toRightOf="@+id/buttonOwnerList"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintVertical_bias="0.0" />
</android.support.constraint.ConstraintLayout>
