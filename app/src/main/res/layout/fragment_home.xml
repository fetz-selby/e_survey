<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.steve.housing.views.fragment.HomeFragment"
    tools:showIn="@layout/activity_home">


    <Button
        android:id="@+id/buttonOwnerList"
        android:layout_width="200dp"
        android:layout_height="54dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="42dp"
        android:text="@string/owners_btn"
        app:layout_constraintHorizontal_bias="0.565"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonPropertyList"
        android:layout_width="200dp"
        android:layout_height="55dp"

        android:text="@string/properties_btn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/buttonOwnerList"
        app:layout_constraintRight_toRightOf="@+id/buttonOwnerList"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonOwnerList" />

    <Button
        android:id="@+id/buttonListProperties"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:text="View Properties"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonPropertyList"
        app:layout_constraintLeft_toLeftOf="@+id/buttonPropertyList"
        app:layout_constraintRight_toRightOf="@+id/buttonPropertyList"
        app:layout_constraintHorizontal_bias="1.0" />


</android.support.constraint.ConstraintLayout>
