<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.steve.housing.views.fragment.LoginActivityFragment"
    tools:showIn="@layout/activity_login">


    <EditText
        android:id="@+id/editTextUsername"
        android:layout_width="273dp"
        android:layout_height="42dp"
        android:layout_marginLeft="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Your email or phone number"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="78dp"
        app:layout_constraintHorizontal_bias="0.505"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <EditText
        android:id="@+id/editTextPassoword"
        android:layout_width="271dp"
        android:layout_height="44dp"
        android:ems="10"
        android:hint="Your password"
        android:inputType="textPassword"
        app:layout_constraintLeft_toLeftOf="@+id/editTextUsername"
        app:layout_constraintRight_toRightOf="@+id/editTextUsername"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@+id/editTextUsername" />

    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="225dp"
        android:layout_height="46dp"
        android:text="Login"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/editTextPassoword"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/buttonSignup"
        android:layout_width="228dp"
        android:layout_height="46dp"
        android:text="Button"
        app:layout_constraintLeft_toLeftOf="@+id/buttonLogin"
        app:layout_constraintRight_toRightOf="@+id/buttonLogin"
        android:layout_marginTop="19dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonLogin"
        app:layout_constraintHorizontal_bias="0.0"
        tools:layout_editor_absoluteY="294dp" />

    <TextView
        android:id="@+id/textViewForgotPwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password ?"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonSignup" />

</android.support.constraint.ConstraintLayout>
