<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.steve.housing.views.fragment.PropertyIDsFormFragment"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <EditText
        android:id="@+id/editTextPin"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="@string/property_identification_numbers_hint"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/spinnerElectricitySource"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="47dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


    <EditText
        android:id="@+id/editTextIdentureNumber"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:hint="@string/identure_number_hint"
        android:layout_below="@+id/editTextTitleRegistrationNumber"
        android:layout_alignStart="@+id/editTextTitleRegistrationNumber"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toBottomOf="@+id/editTextPin" />


    <EditText
        android:id="@+id/editTextTitleRegistrationNumber"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textViewElectricitySource"
        android:layout_below="@+id/editTextIdentureNumber"
        android:ems="10"
        android:inputType="text"
        android:hint="@string/title_identification_number_hint"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@+id/editTextIdentureNumber"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButtonPropertyId"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:clickable="true"
        app:fabSize="mini"
        app:srcCompat="@drawable/check"
        android:layout_marginEnd="7dp"
        android:layout_marginRight="31dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="68dp"
        app:layout_constraintTop_toBottomOf="@+id/editTextTitleRegistrationNumber"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.938"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.228" />

</android.support.constraint.ConstraintLayout>
