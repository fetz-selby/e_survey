<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.steve.housing.views.fragment.SocialMediaDetailsFormFragment">


    <EditText
        android:id="@+id/editTextFacebook"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp"
        android:ems="10"
        android:hint="@string/your_facebook_username_hint"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editTextWhatsapp"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:ems="10"
        android:hint="@string/whatsapp_hint"
        android:inputType="phone"
        android:layout_below="@+id/editTextFacebook"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/editTextTwitter"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editTextWhatsapp"
        android:layout_below="@+id/editTextWhatsapp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="@string/your_twitter_username_hint"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editTextInstagram"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editTextTwitter"
        android:layout_below="@+id/editTextTwitter"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="@string/your_instagram_account_hint"
        android:inputType="textPersonName" />

    <Spinner
        android:id="@+id/spinnerPhoneFeature"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/editTextInstagram"
        android:layout_alignStart="@+id/editTextInstagram" />
</RelativeLayout>
